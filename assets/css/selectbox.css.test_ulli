img.selectbox {
  width: 16px;
  height: 16px;
  text-align: left;
}


.selectbox {
  list-style: none;
  font-weight: bold;
  margin-bottom: 10px;
  float: left;
  width: 100%;
}

.selectbox li {
  float: left;
  margin-right: 10px;
  position: relative;
}

.selectbox a {
  display: block;
  padding: 5px;
  color: #fff;
  background-color: #333;
  text-decoration: none;
}

.selectbox a:hover {
  color: #fff;
  background_color: #6b0c36;
  text-decoration: underline;
}

/* ****************+ */

.selectbox ul {
  background-color: #fff;
  background: rgba(255,255,255,0);
  list-style: none;
  position: absolute;
  left: -9999px;
}

.selectbox ul li {
  padding-top: 1px;
  float: none;
}

.selectbox ul a {
  white-space: nowrap;
}

.selectbox li:hover ul {
  position: absolute;
  left: 0;
}

.selectbox li:hover a {
  background-color: #6b0c36;
  text-decoration: underline;
}

.selectbox li:hover ul a {
  text-decoration: none;
}

.selectbox li:hover ul li a:hover {
  background-color: #333;
}

